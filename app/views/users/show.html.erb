<!-- :noticeの値が代入される=signin、updateされた。ってことはif文で書く必要なくね？とも考えたが一応。こうした-->
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- ローカル変数にインスタンス定数を代入 -->
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table width="80%" class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <!-- 自分のブックのみ展開するコード-->
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag @user, :profile_image, size:"30x30", fallback: "no_image.jpg"%>
                <% end %>
              </div>
            </td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
