<% if flash[:notices] %>
  <p><%= flash[:notices] %></p>
<% end %>
<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <!-- ローカル変数にインスタンス定数を代入 -->
      <%= render 'users/list', user: @user, book_new: @book_new, book: @book %>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
      <table width="80%">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <!-- 自分のブックのみ展開するコード-->
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              </div>
            </td>
            <td><%= link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
