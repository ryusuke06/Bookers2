<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/list', user: @user, book_new: @book_new, book: @book %>
    </div>
    <div class="col-lg-8">
      <h2>Books</h2>
      <table width="80%">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @book.current_user.each do |post_book| %>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              </div>
            </td>
            <td><%= post_book.title %></td>
            <td><%= post_book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
