<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <!-- ローカル変数にインスタンス定数を代入 -->
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    <div class="col-lg-8">
      <h2>Users</h2>
      <table width="80%">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <!-- 展開用コード-->
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              </div>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
