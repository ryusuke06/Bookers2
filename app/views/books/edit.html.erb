<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1">
                            <div class="form-header text-center">
                                <h2 class="form-header-title">User Info</h2>
                            </div>
                            <div class="form-body">

                              <h2>Editing Book</h2>
                              <%= form_for(@book) do |f| %>
                                <!-- バリデーションチェックを通らなかった時のエラー文表示コード -->
                                <% if @book.errors.any? %>
                                  <div id="error_explanation">
                                    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                                    <ul>
                                    <% @book.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                    <% end %>
                                    </ul>
                                  </div>
                                <% end %>

                                <div class="form-group has-icon">
                                  <label>Title</label>
                                  <%= f.text_field :title, autofocus: true, class:"form-control" %>
                                  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                                </div>
                                <div class="form-group has-icon">
                                  <label>Opinion</label>
                                  <%= f.text_area :body, autofocus: true, class:"form-control" %>
                                  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                                </div>
                                <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                              <% end %>
                              <%= link_to "Show", book_path(@book.id) %>
                              <%= link_to "Back", books_path %>

                            </div>
                          </div>
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>