<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- ローカル変数にインスタンス定数を代入 -->
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table width="80%" class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @user, :profile_image, size:"30x30", fallback: "no_image.jpg"%>
                <%= @book.user.name %>
                <% end %>
              </div>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
            <th><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success" %></th>
            <th><%= link_to "Destroy", book_path(@book.id), method: :delete,data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
