<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <!-- ローカル変数にインスタンス定数を代入 -->
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    <div class="col-lg-8">
      <h2>Book detail</h2>
      <table width="80%">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div class="user-edit-image">
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
              </div>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
            <th><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-lg btn-block btn-base-1 mt-20" %></th>
            <th><%= link_to "Delete", book_path(@book.id), method: :delete,data: {confirm: "本当に削除しますか？"}, class: "btn btn-lg btn-block btn-base-1 mt-20" %></th>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
